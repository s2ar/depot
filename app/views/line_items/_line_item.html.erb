<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
	<tr>
<% end %>	
	<td><%= link_to 'Del', line_item, confirm: 'Are you sure?', method: :delete %></td>
	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title %></td>	
	<td>
		<%= link_to 'decr', decrement_line_item_path(line_item), method: :put %>
		<%= link_to 'incr', increment_line_item_path(line_item), method: :put %>
	</td>

	<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>		
</tr>
